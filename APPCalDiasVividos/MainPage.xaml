<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APPCalDiasVividos.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="25">
            <Label
                x:Name="lblCalculardiasVividos"
                Text="Nome"/>
            <Entry
                x:Name="etrNome"
                 Placeholder="(Digite aqui o Nome)"
                 BackgroundColor="Grey"/>
            <Label
                 x:Name="lblIdadeatual"
                Text="Idade Atual"/>
            <Entry
                 x:Name="etrIdadeatual"
                Placeholder="(Digite aqui a Idade Atual)"
                BackgroundColor="Grey"/>
            <Button
                x:Name="btnCalculardiasvividos"
                Text="Calcular Dias Vividos"
                FontSize="Medium"
                Background="White"/>
                
            <Button
                x:Name="btnLimparCampos"
                Text="Limpar Campos"
                FontSize="Medium"
                Background="White"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
